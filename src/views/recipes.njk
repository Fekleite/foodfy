{% extends "layout.njk" %}

{% block content %}
  <main class="recipes page-recipes">
    <section class="recipes__content">
      {% for recipe in recipes %}
        <div class="recipe">
          <div class="recipe__image">
            <img src="{{recipe.image}}" alt="Imagem de {{recipe.title}}"/>
          </div>
          <h3>{{recipe.title}}</h3>
          <p>{{recipe.author}}</p>
        </div>
      {% endfor %}
    </section>
  </main>
{% endblock content %}