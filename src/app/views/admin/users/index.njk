{% extends "layout-admin.njk" %}

{% block content %}
  <main>
    <section class="user">
      <header class="user__header">
        <h2 class="user__title">Usu√°rios</h2>

        <a href="/admin/users/register" class="users__link">Novo</a>
      </header>

      <div class="user__content">
        {% for user in users %}
          <div class="user__item">
            <h3 class="user__name">{{user.name}}</h3>
            <p class="user__email">{{user.email}}</p>

            <div class="user__options">
              <a href="/admin/users/{{user.id}}/update" class="user__edit">Editar</a>

              <form method="POST" action="/admin/users?_method=DELETE">
                <input type="hidden" name="id" value="{{user.id}}">

                <button type="submit" class="user__remove">Remover</button>
              </form>
            </div>
          </div>
        {% endfor %}
      </div>
    </section>
  </main>
{% endblock content %}