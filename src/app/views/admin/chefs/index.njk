{% extends "layout-admin.njk" %}

{% block content %}
  <main>

    <h2 class="title">Gerenciar chefs</h2>

    <section class="chefs__content page-admin">
      {% for chef in chefs %}
        <div class="chef">
          <div class="chef__avatar">
            <img src="{{chef.avatar}}" alt="">
          </div>
          <div class="chef__infos">
            <h2 class="chef__name">{{chef.name}}</h2>
            <a href="/admin/chefs/{{chef.id}}" class="chef__link">Visualizar</a>
          </div>
        </div>
      {% endfor %}

    </section>

    <a href="/admin/chefs/create" class="chef__link--add">
      <div>+</div>
      Novo Chef
    </a>

  </main>
{% endblock content %}