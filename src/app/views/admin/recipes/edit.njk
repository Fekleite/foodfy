{% extends "layout-admin.njk" %}

{% block head %}
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet"/>
{% endblock head %}

{% block content %}
  <main>
    <section class="form">
      <form action="/admin/recipes?_method=PUT" method="post">
        <div class="form__header">
          <h3>Editar receita</h3>

          <button type="submit" class="form__save">Salvar Receita</button>
        </div>

        <input type="hidden" name="id" value="{{recipe.id}}">

        <div class="form__item">
          <label for="image">Imagem da receita</label>
          <div class="photos__container">
            <div id="photos__upload">
              <input type="file" name="photos" id="photos__input" accept="image/*" onchange="PhotosUpload.handleFileInput(event)" multiple="multiple">
              <div class="photos__add">
                <i class="material-icons">
                  add
                </i>
              </div>
            </div>

            <div id="photos__preview">
              {% if files %}
                {% for image in files %}
                  <div class="photo" id="{{image.id}}">
                    <img src="{{image.src}}" alt="{{image.name}}">
                    <i class="material-icons" onclick="PhotosUpload.removeOldPhoto(event)">
                      close
                    </i>
                  </div>
                {% endfor %}
                <input type="hidden" name="removed_files">
              {% endif %}
            </div>
          </div>
        </div>

        <div class="form__item">
          <label for="title">Título da receita</label>
          <input type="text" name="title" id="title" placeholder="Ex: Triplo bacon burger" value="{{recipe.title}}">
        </div>

        <div class="form__item">
          <label for="author">Autor</label>
          <select name="author" id="author">
            {% for chef in chefs %}
              <option value="{{chef.id}}" {% if chef.id == recipe.chef_id %} selected="selected" {% endif %} >{{chef.name}}</option>
            {% endfor %}
          </select>
        </div>

        <div class="form__item">
          <div id="form__ingredients">
            <label>Ingredientes</label>
            {% for ingredient in recipe.ingredients %}
              <div class="form__input--ingredient">
                <input type="text" name="ingredients[]" placeholder="Ex: 300 g de bacon moído" value="{{ingredient}}">
              </div>
            {% endfor %}
          </div>
          <a class="form__button--add" id="button__add--ing">Adicionar novo ingrediente</a>
        </div>

        <div class="form__item">
          <div id="form__preparation">
            <label>Modo de preparo</label>
            {% for prep in recipe.preparation %}
              <div class="form__input--preparation">
                <input type="text" name="preparation[]" placeholder="Ex: Retire do forno e despeje o molho de tomate." value="{{prep}}">
              </div>
            {% endfor %}

          </div>
          <a class="form__button--add" id="button__add--prep">Adicionar novo passo</a>
        </div>

        <div class="form__item">
          <label for="information">Informações adicionais</label>
          <textarea name="information" id="information" cols="30" rows="10" placeholder="Ex: Pizza de liquidificador é uma receita deliciosa e super simples de preparar...">{{recipe.information}}</textarea>
        </div>

      </form>
    </section>
  </main>

  <script>
    function addNewField(containerId, fieldClass) {
      const container = document.querySelector(containerId);
      const field = document.querySelectorAll(fieldClass);

      const newField = field[field.length - 1].cloneNode(true);

      if (newField.children[0].value == "") {
        return;
      }
        
      newField.children[0].value = "";

      container.appendChild(newField);
    }

    document
      .querySelector("#button__add--ing")
      .addEventListener("click", () => addNewField("#form__ingredients", ".form__input--ingredient"));

    document
      .querySelector("#button__add--prep")
      .addEventListener("click", () => addNewField("#form__preparation", ".form__input--preparation"));
  </script>
{% endblock content %}