{% if error %}
  <div class="message__container message__container--error">
      <p class="message__text">
        {{error}}
      </p>

      <span class="message__bar"></span>
  </div>
{% endif %}

{% if success %}
  <div class="message__container message__container--success">
      <p class="message__text">
        {{success}}
      </p>

      <span class="message__bar"></span>
  </div>
{% endif %}