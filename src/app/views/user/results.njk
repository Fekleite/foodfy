{% extends "layout.njk" %}

{% block content %}
  <main class="recipes">
    <h2>Buscando por "{{filter}}"</h2>

    <section class="recipes__content">
      {% for recipe in recipes %}
        <a class="recipe__link--hidden" href="/recipes/{{recipe.id}}">
          <div class="recipe">
            <div class="recipe__image">
              <img src="{{recipe.img}}" alt="Imagem de {{recipe.title}}"/>
            </div>
            <h3>{{recipe.title}}</h3>
            <p>{{recipe.author}}</p>
          </div>
        </a>
      {% endfor %}
    </section>
  </main>
{% endblock content %}