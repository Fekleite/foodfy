{% extends "layout.njk" %}

{% block content %}
  <main>
    <h2>Buscando por "{{filter}}"</h2>

    <section class="recipes">
      {% for recipe in recipes %}
        <div class="recipes__content">
          <div class="recipe__image">
            <img src="{{recipe.img}}" alt="Imagem de {{recipe.title}}"/>
          </div>
          <h3>{{recipe.title}}</h3>

          <a href="/recipes/{{recipe.id}}" class="button">Ver Receita</a>
        </div>
      {% endfor %}
    </section>
  </main>
{% endblock content %}