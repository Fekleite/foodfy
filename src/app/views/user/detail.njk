{% extends "layout.njk" %}

{% block head %}
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet"/>
{% endblock head %}

{% block content %}
  <main>
    <section class="detail">
      <div class="detail__image">
        <img src="{{files[0].src}}" alt="Imagem de {{files[0].name}}"/>
      </div>

      <h2>{{recipe.title}}</h2>

      <p>por {{chef.name}}</p>

      <div class="ingredients">
        <div class="ingredients__header">
          <h3>Ingredientes</h3>

          <span class="material-icons" id="ingredientsAccordion">
            arrow_drop_up
          </span>
        </div>

        <ul>
          {% for item in recipe.ingredients %}
            <li>{{item}}</li>
          {% endfor %}
        </ul>
      </div>

      <div class="preparation">
        <div class="preparation__header">
          <h3>Modo de preparo</h3>

          <span class="material-icons" id="preparationAccordion">
            arrow_drop_up
          </span>
        </div>

        <ul>
          {% for item in recipe.preparation %}
            <li>{{item}}</li>
          {% endfor %}
        </ul>
      </div>

      {% if recipe.information !== "" %}
        <div class="information">
          <div class="preparation__header">
            <h3>Informações adicionais</h3>

            <span class="material-icons" id="informationAccordion">
              arrow_drop_up
            </span>
          </div>

          <p >{{recipe.information}}</p>
        </div>
      {% endif %}
    </section>
  </main>
{% endblock content %}